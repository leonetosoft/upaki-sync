{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES5",
    "lib": [ "es5", "es6" ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "jsx": "react"
  },
  "node": {
    "fs": "empty",
    "fsevents": "empty"
  },
  "include": [
    "src/**/*"
],
  "files": [
    "./src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}